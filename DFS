//BFS-traversal algorithm

class Graph{
  private int v;
  private LinkedList<Integer> adj[];
  public Graph(int a){
    v = a;
    adj = new LinkedList<Integer>[v];
    for(int i = 0; i < v; i++)
      adj[i] = new LinkedList<Integer>();
  }
  
  public addEdge(int v, int u){
    adj[u].add(v);
    adj[v].add(u);
  }
  
  public void dfs(int v){
    boolean[] visited = new boolean[];
    dfs(v,visited);
  }
  
  private void dfs(int v, boolean[] arr){
    arr[v] = true;
    
    for(Integer i: adj[v]){
      if(!arr[i])
        dfs(i, arr);
    }
  }
  
}
